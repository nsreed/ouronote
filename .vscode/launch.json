{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "ng serve chrome",
      "port": 9222,
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "timeout": 15000,
      "pathMapping": {
        "webpack:///projects": "${workspaceFolder}/projects"
      },
      "browserLaunchLocation": "ui",
      "pauseForSourceMap": true,
      "sourceMaps": true,
      "runtimeArgs": ["--allow-insecure-localhost", "--disable-web-security"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "app-server chrome",
      "url": "https://localhost:4321",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.chrome-data"
    },
    {
      "name": "Attach to Chrome",
      "request": "attach",
      "port": 9222,
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox against localhost",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "webpack:///projects/demo",
          "path": "${workspaceFolder}/projects/demo"
        }
      ]
    }
  ]
}
